<!DOCTYPE html>
<html>
  <head>
    <title>PokemonTeamBuilder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-primary bg-opacity-10">
    <!-- user controls -->
    <div class="account_controls navbar navbar-expand-lg bg-transparent float-end m-1">
      <% if @current_user.present? %>
        <% if @current_user.admin? %>
          <%= link_to 'All users', users_path, :class => "nav-link active " %>
        <% end %>
        <%= link_to "Sign out #{ @current_user.email }", login_path, :method => 'delete', :class => "nav-link active" %>
      <% else %>
        <%= link_to 'Sign up', new_user_path, :class => "nav-link active p-1 pb-0 pt-0" %>
        <%= link_to 'Sign in', login_path, :class => "nav-link active " %>
      <% end %>
    </div>
    <!-- main nav -->
    <nav class="navbar navbar-expand-sm bg-primary col-12" >
      <div class="container-fluid">
        <%= link_to 'Team Builder', root_path, :class =>"navbar-brand text-white" %>
        <button class="navbar-toggler " type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto">
            <li class="nav-item dropdown"><!-- pokemon dropdown -->
              <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Pokemon
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "All Pokemon", pokemon_index_path, :class => "dropdown-item" %></li>
                <li><%= link_to "New Pokemon", new_pokemon_path, :class => "dropdown-item" %></li>
              </ul>
            </li>
            <li class="nav-item dropdown"> <!-- teams dropdown -->
              <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Teams
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "All Teams", teams_path, :class => "dropdown-item" %></li>
                <li><%= link_to "New Team", new_team_path, :class => "dropdown-item" %></li>
              </ul>
            </li>
            <li class="nav-item dropdown"><!-- information drop down -->
              <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Information
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Species", species_index_path, :class => "dropdown-item" %></li>
                <li><%= link_to "Abilities", abilities_path, :class => "dropdown-item" %></li>
                <li><%= link_to "Attacks", attacks_path, :class => "dropdown-item" %></li>
                <li><%= link_to "Natures", natures_path, :class => "dropdown-item" %></li>
                <li><%= link_to "Items", items_path, :class => "dropdown-item" %></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- main body -->
    <div class="container">
    <%= yield %>
    </div>
  </body>
</html>
